@model Login.ViewModels.LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Anurag Codes</title>
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
          rel="stylesheet" />
    <link rel="stylesheet" href="~/css/loginstyle.css"/>
</head>
<body class="body1">

    <div class="containerlogin container">
       
            
                <form method="post">
                    <h1>Inicia sesión</h1>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="input-box">
                        <input asp-for="Email" type="text" placeholder="Correo" required />
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>
                    <div class="input-box">
                        <input asp-for="Password" type="password" placeholder="Contraseña" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>


            <button type="submit" class="btn">Enviar</button>

                </form>
       
        </div>

       


          
</body>
</html>
