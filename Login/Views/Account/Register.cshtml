@model Login.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Anurag Codes</title>
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
          rel="stylesheet" />
    <link rel="stylesheet" href="~/css/loginstyle.css"/>
</head>
<body class="body1">

    <div class="containerlogin container">
       
            
                <form method="post">
                    <h1>Registro</h1>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="input-box">
                <input asp-for="Email" class="form-control" placeholder="Correo" required/>
                <span asp-validation-for="Email" class="text-danger"></span>

                    </div>
                    <div class="input-box">
                <input asp-for="Password" class="form-control" placeholder="Contraseña" required />
                <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
            <div class="input-box">
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirma tu contraseña" required />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>


                    <button type="submit" class="btn">Enviar</button>

                </form>
       
        </div>

       


          
</body>
</html>

